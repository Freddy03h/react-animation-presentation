.DropDown__Content {
  visibility: hidden;
  opacity: 0;
  transform: scale(.9);

  transition-delay: 
    0ms,     0ms,       100ms;
  transition-duration:
    100ms,   100ms,     0ms;
  transition-property: 
    opacity, transform, visibility;
  transition-timing-function:
    ease-in, ease-in,   linear;
}

.DropDown__Content--open {
  visibility: visible;
  opacity: 1;
  transform: scale(1);
  
  transition-delay: 0ms;
}